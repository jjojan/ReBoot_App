<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    android:background="@color/color2"
    android:visibility="visible"
    tools:context=".Activities.FriendsActivity">

    <TextView
        android:id="@+id/tv_FriendsTitle"
        android:layout_width="425dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/thasadith_regular"
        android:text="Friends"
        android:textAlignment="center"
        android:textColor="@color/color5"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_SuggestedTitle"
        android:layout_width="425dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/thasadith_regular"
        android:text="Suggested Friends"
        android:textAlignment="center"
        android:textColor="@color/color5"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_RequestsTitle"
        android:layout_width="425dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="325dp"
        android:fontFamily="@font/thasadith_regular"
        android:text="Friend Requests"
        android:textAlignment="center"
        android:textColor="@color/color5"
        android:textSize="30sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_Friends_list"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:scrollbars="vertical" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_Suggested_Friends_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:scrollbars="vertical" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_Friend_Request_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/thasadith_regular"
        android:text="Search User"
        android:textColor="@color/color5"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="575dp"
        android:fontFamily="@font/thasadith_regular"
        android:text="Blocked Users"
        android:textColor="@color/color5"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_Friends_Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="650dp"
        android:text="Done" />


    <ImageButton
        android:id="@+id/btn_block"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/tv_block"
        android:layout_marginLeft="275dp"
        android:scaleType="fitCenter"
        android:src="@drawable/block_user" />


    <ImageButton
        android:id="@+id/btn_searchFriend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/tv_search"
        android:layout_marginLeft="275dp"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_search_24" />

</RelativeLayout>