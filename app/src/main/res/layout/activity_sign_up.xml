<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/ivRebootLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/reboot3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/tvIntroduction"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivRebootLogo"
        android:layout_marginTop="0dp"
        android:text="Get Started with ReBoot"
        android:textColor="@color/gray"
        android:layout_centerHorizontal="true"
        android:autoSizeTextType="uniform"
        android:textSize="25dp"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvIntroduction"
        android:hint="Username"
        android:textColorHint="@color/black"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/edt_background"
        android:paddingLeft="13dp"/>
    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edtUsername"
        android:hint="Email"
        android:textColorHint="@color/black"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/edt_background"
        android:paddingLeft="13dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtEmail"
        android:textColorHint="@color/black">
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/edtEmail"
            android:hint="Password"
            android:textColorHighlight="@color/black"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/edt_background"
            android:inputType="textPassword"
            android:paddingLeft="13dp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:layout_below="@id/inputLayout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_background"
        android:layout_marginTop="13dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tvSignUpLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up with Google"
        android:layout_below="@+id/btnSignUp"
        android:layout_centerHorizontal="true"
        android:linksClickable="true"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginTop="25pt" />
    <ImageView
        android:layout_width="79dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/google_icon"
        android:layout_below="@id/tvSignUpLink"
        android:id="@+id/google_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoginLink"
        android:text="Already have an account? Login here"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="13dp"/>


</RelativeLayout>