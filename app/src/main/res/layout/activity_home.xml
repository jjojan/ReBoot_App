<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popular Games"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="@font/thasadith_bold"
        android:textAppearance="@drawable/gradient_background"
        android:layout_marginHorizontal="@dimen/dialog_title_text_size"
        android:layout_marginVertical="13dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hzRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:outlineAmbientShadowColor="@color/aqua"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dialog_title_text_size"
        android:text="New Games"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="@font/thasadith_bold"
        android:textAppearance="@drawable/gradient_background"
        android:layout_marginVertical="13dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/newGamesRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="@color/aqua"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming Games"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="@font/thasadith_bold"
        android:textAppearance="@drawable/gradient_background"
        android:layout_marginHorizontal="@dimen/dialog_title_text_size"
        android:layout_marginVertical="13dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvYourGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="@color/aqua"/>


</LinearLayout>