<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="false"
    android:background="@color/gray"
    android:visibility="visible"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Sign Out" />

    <TextView
        android:id="@+id/tvUser_Username"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_Username"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="375dp"
        android:layout_toRightOf="@id/tv_Username"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="125dp"
        android:text="Username: "
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/ProfilePic"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:scaleType="fitCenter"
        android:src="?attr/selectableItemBackground"
        android:visibility="visible"
        app:srcCompat="@drawable/baseline_person_24" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="175dp"
        android:text="Email:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView3"
        android:layout_alignLeft="@id/tvUser_Username"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="225dp"
        android:text="Bio"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_below="@id/textView6"
        android:layout_centerHorizontal="true"
        android:text="WWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWWW" />

    <ImageButton
        android:id="@+id/Friends"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="450dp"
        android:scaleType="fitCenter"
        android:src="@drawable/friends" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="425dp"
        android:text="Friends" />

    <ImageButton
        android:id="@+id/Starred"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="450dp"
        android:scaleType="fitCenter"
        android:src="@drawable/star" />

    <ImageButton
        android:id="@+id/EditProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="450dp"
        android:scaleType="fitCenter"
        android:src="@drawable/edit_profile" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="425dp"
        android:text="Starred" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="425dp"
        android:text="EditProfile" />


</RelativeLayout>