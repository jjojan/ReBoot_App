<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"

    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/ivRebootLogo"
        android:layout_width="353dp"
        android:layout_height="147dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/rebootlogo" />

    <TextView
        android:id="@+id/tvIntroduction"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivRebootLogo"
        android:layout_marginTop="135dp"
        android:layout_centerHorizontal="true"
        android:autoSizeTextType="uniform"
        android:text="Login to your account"
        android:textAlignment="center"
        android:textColor="@color/aqua"
        android:fontVariationSettings=""
        android:textSize="25dp"
        android:fontFamily="@font/thasadith_bold"/>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tvIntroduction"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/edt_background"
        android:hint="Email"
        android:paddingLeft="13dp"
        android:textColorHint="@color/aqua"
        android:fontFamily="@font/thasadith_bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtEmail"
        android:textColorHint="@color/black">

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputLayout"
        android:layout_marginTop="77dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_background"
        android:text="Login"
        android:fontFamily="@font/thasadith_bold"/>

    <TextView
        android:id="@+id/tvLoginLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with Google"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:linksClickable="true"
        android:textSize="13dp"
        android:textColor="@color/white60"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/thasadith_bold"
        />

    <ImageView
        android:layout_width="79dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/google_icon"
        android:layout_below="@id/tvLoginLink"
        android:id="@+id/google_img_login"/>

    <TextView
        android:id="@+id/btnSignUpLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@null"
        android:text="Don't have an account? Sign up here."
        android:textSize="15dp"
        android:fontFamily="@font/thasadith_bold"
        android:textColor="@color/white60"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/google_img_login"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edtEmail"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/edt_background"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="13dp"
        android:textColor="@color/aqua"
        android:textColorHighlight="@color/aqua"
        android:textColorHint="@color/aqua"
        android:fontFamily="@font/thasadith_bold"/>

</RelativeLayout>