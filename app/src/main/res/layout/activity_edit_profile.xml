<!--        android:maxLines="5"-->
<!--        android:paddingLeft="13dp"-->
<!--        android:fontFamily="@font/thasadith_bold"-->
<!--        android:textColorHint="@color/black" />-->

    <EditText
        android:id="@+id/edt_Bio"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/aqua1"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:hint="Write a bio..."
        android:textColorHint="@color/black"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:paddingLeft="15dp"
        android:layout_below="@+id/et_currentUserName"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_CharCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_Bio"
        android:layout_marginLeft="65dp"
        android:text="0/225" />

    <TextView
        android:id="@+id/btn_SaveProfile"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_CharCount"
       android:layout_marginTop="525dp"
        android:layout_marginLeft="180dp"
        android:textSize="25dp"
        android:text="Save"
        android:fontFamily="@font/thasadith_bold"
        android:clickable="true"/>




</RelativeLayout>